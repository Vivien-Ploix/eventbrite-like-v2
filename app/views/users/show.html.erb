
  <div class="container mt-4">
  <h2>Profil :</h2>

  <div class="row">
    <div class="card border-success mb-3" style="max-width: 18rem;">
      <div class="card-header">Nom : <%= @user.first_name %> <%= @user.last_name%></div>
        <div class="card-body text-success">
          <h6 class="card-title">Email: <%= @user.email %></h6>
          <p class="card-text text-muted">Description : <%= @user.description %></p>
      </div>
    </div>
  </div>
  

  <!-- Liste événements -->
  <h3 class="mt-4 mb-4">Les événements de <%= @user.first_name %>:</h3>
  <% @user.events.each do |event|%>
  <div class="row my-3">
    <div class="col-md-12">
      <div class="card p-2">
        <div class="card-body d-flex m-0 p-0">

          <div class="col-md-1 pt-2">
            <div class="ml-auto d-flex">
              Id: <%=event.id%>
            </div>
          </div>
          <div class="col-md-11">
              <div class="card-text">
                <a href="/events/<%=event.id%>/">
                   <span><strong>Titre:</strong></span><span class="text-muted"> <%= event.title %></span>
                </a>
              </div>
            <div class="card-body m-0 px-0  pt-2 pb-0 ">
               <span><strong>Potin:</strong></span><span class="text-muted"> <%= event.description %></span>
            </div>
          </div>

        </div>

      </div>
    </div>
  </div>
  <%end%>


</div>