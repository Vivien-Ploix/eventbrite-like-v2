
<div class="container mt-4">


  <h2>Evenement :  <%= @event.title %></h2>


  <div class="row">
    <div class="card border-success mb-3" style="max-width: 18rem;">
      <div class="card-header">Organisateur: <%= @event.admin.first_name %> <%= @event.admin.last_name%></div>
        <div class="card-body text-success">
          <h6 class="card-title">Date: <%= @event.start_date %></h6>
          <p class="card-text text-muted"><%= @event.duration %> min</p>
          <p class="card-text text-muted"><%= @event.description %></p>
          <p class="card-text text-muted">Seulement <%= @event.price %>€</p>
          <p class="card-text text-muted">Se déroule à <%= @event.location %></p>

        </div>
    </div>
  </div>


</div>
