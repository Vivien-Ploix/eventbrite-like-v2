

<% if @alert %>
<div class="alert alert-danger ">
    <%= @message %>
</div>
<% end %>



<div class="container mt-5">
    <div class="row">
        <div class="col-4">
            <div class="card border-success mb-5" style="width: 18rem;">
                <div class="card-header">
                    <h4 class="h5 text-center">Nouvel Evenement</h4>
                </div>
                <div class="card-body">
                  <%= form_for @event, url: {action: "create"}, method: "post" do |f| %>
                  <div class='form-group'>
                        <label>
                          <%= f.text_field :title, placeholder: "  Titre" %>
                        </div>
                    <div class='form-group'>
                        <label>
                          <%= f.text_area :description, autocomplete: "Description" %>
                    </div>
                    <div class='form-group'>
                      <label>
                        <%= f.date_field :start_date, placeholder: "Start_date" %>
                    </div>
                    <div class='form-group'>
                      <label>
                        <%= f.number_field :price, placeholder: "Price" %>
                    </div>
                    <div class='form-group'>
                      <label>
                        <%= f.number_field :duration, placeholder: "Duration" %>
                    </div>
                    <div class='form-group'>
                      <label>
                        <%= f.text_field :location, placeholder: "Location" %>
                    </div>


                    <div class='form-group'>
                      <%= f.submit "Create" %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>